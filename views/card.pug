doctype html
html
  head
    style.
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Segoe UI', Roboto, -apple-system, sans-serif;
        background: linear-gradient(135deg, #{theme.backgroundStart}, #{theme.backgroundEnd});
        color: #{theme.text};
        width: 510px;
        height: 300px;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
      }

      .card {
        backdrop-filter: blur(12px);
        background-color: rgba(255, 255, 255, 0.08);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 16px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        display: grid;
        grid-template-columns: 1fr 1fr auto;
        grid-template-rows: auto repeat(3, 1fr);
        gap: 10px 16px;
        width: 100%;
        height: 100%;
        padding: 24px;
        color: inherit;
      }

      .card h1 {
        grid-column: 1 / span 3;
        font-size: 28px;
        font-weight: 600;
        margin-bottom: 8px;
        align-self: start;
        letter-spacing: 0.5px;
      }

      .label {
        opacity: 0.75;
        font-size: 14px;
        font-weight: 500;
        grid-column: 1;
        align-self: center;
        color: #{theme.label};
      }

      .value {
        grid-column: 2;
        font-size: 18px;
        font-weight: 500;
        align-self: center;
        justify-self: start;
        color: #{theme.value};
      }

      .icon {
        grid-column: 3;
        grid-row: 2 / span 2;
        align-self: center;
        justify-self: center;
        width: 88px;
        height: 88px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        padding: 8px;
      }

      svg {
        width: 100%;
        height: 100%;
      }

      svg path {
        stroke: #{theme.iconColor};
      }

      .condition {
        grid-column: 3;
        grid-row: 4;
        font-size: 16px;
        opacity: 0.9;
        align-self: start;
        justify-self: center;
        text-align: center;
        color: #{theme.condition};
        margin-top: 4px;
      }

  body
    .card
      h1= weather.location

      .label Temperature:
      .value #{weather.temp}°C

      .icon
        != iconSvg

      .label Feels like:
      .value #{weather.feels_like}°C

      .condition #{weather.condition}

      .label Humidity:
      .value #{weather.humidity}%

      .label Dew point:
      .value #{weather.dew_point}°C
