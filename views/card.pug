doctype html
html
  head
    style.
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background-color: #{theme.background};
        color: #{theme.text};
        width: 255px;
        height: 150px;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
      }
      .card {
        display: grid;
        grid-template-columns: auto 1fr 1fr;
        grid-template-rows: auto repeat(4, 1fr);
        gap: 4px 8px;
        width: 100%;
        padding: 12px;
        font-size: 12px;
        height: 100%;
      }
      .card h1 {
        grid-column: 1 / span 3; 
        font-size: 14px;
        margin-bottom: 8px;
        align-self: start;
      }
      .label {
        opacity: 0.85;
        grid-column: 1;
        justify-self: start;
        align-self: center;
      }
      .value {
        grid-column: 2;
        justify-self: start;
        align-self: center;
        margin-left: 0;
      }
      .icon {
        grid-column: 3;
        grid-row: 2 / span 2;
        align-self: center;
        justify-self: center;
        width: 48px;
        height: 48px;
      }
      svg {
        width: 100%;
        height: 100%;
      }
      svg path {
        stroke: #{theme.iconColor};
        fill: #{theme.iconColor};
      }
      .condition {
        grid-column: 3;
        grid-row: 4;
        font-size: 11px;
        opacity: 0.75;
        align-self: start;
        justify-self: center;
        margin-top: 6px;
        text-align: center;
      }
  body
    .card
      h1= weather.location

      .label Temperature:
      .value #{weather.temp}°C

      .icon
        != iconSvg

      .label Feels like:
      .value #{weather.feels_like}°C

      .condition #{weather.condition}

      .label Humidity:
      .value #{weather.humidity}%

      .label Dew point:
      .value #{weather.dew_point}°C