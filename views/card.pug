doctype html
html
  head
    style.
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Segoe UI', Roboto, -apple-system, sans-serif;
        background: linear-gradient(135deg, #{theme.backgroundStart}, #{theme.backgroundEnd});
        color: #{theme.text};
        width: 510px;
        height: 300px;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
      }

      .card {
        display: flex;
        flex-direction: row;
        backdrop-filter: blur(12px);
        background-color: rgba(255, 255, 255, 0.08);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 16px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        width: 100%;
        height: 100%;
        padding: 24px;
        gap: 24px;
        color: inherit;
      }

      .left {
        flex: 1;
        display: grid;
        grid-template-columns: auto 1fr;
        grid-template-rows: repeat(5, auto);
        gap: 10px 16px;
      }

      h1 {
        grid-column: 1 / span 2;
        font-size: 28px;
        font-weight: 600;
        margin-bottom: 8px;
        letter-spacing: 0.5px;
      }

      .label {
        opacity: 0.75;
        font-size: 24px;
        font-weight: 500;
        color: #{theme.label};
        align-self: center;
      }

      .value {
        font-size: 18px;
        font-weight: 500;
        align-self: center;
        justify-self: start;
        color: #{theme.value};
        background-color: #{theme.valuebg};
        padding: 4px;
        border-radius: 10px;
      }

      .label.temperature { grid-row: 2; }
      .value.temperature { grid-row: 2; }

      .label.feels_like { grid-row: 3; }
      .value.feels_like { grid-row: 3; }

      .label.humidity { grid-row: 4; }
      .value.humidity { grid-row: 4; }

      .label.date { grid-row: 5; }
      .value.date { grid-row: 5; }

      .right {
        width: 100px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        text-align: center;
      }

      .time {
        color: #{theme.time};
        font-size: 16px;
        font-weight: 500;
        opacity: 0.9;
      }

      .icon {
        width: 88px;
        height: 88px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        padding: 10px;
        flex-shrink: 0;
      }

      svg {
        width: 100%;
        height: 100%;
      }

      svg path {
        stroke: #{theme.iconColor};
      }

      .condition {
        font-size: 16px;
        opacity: 0.9;
        margin-top: 4px;
        color: #{theme.condition};
      }

  body
    .card
      .left
        h1= weather.location

        .label.temperature Temperature:
        .value.temperature #{weather.temp}°C

        .label.feels_like Feels like:
        .value.feels_like #{weather.feels_like}°C

        .label.humidity Humidity:
        .value.humidity #{weather.humidity}%

        .label.date Updated:
        .value.date #{weather.date}

      .right
        .time #{weather.time}
        .icon
          != iconSvg
        .condition #{weather.condition}
